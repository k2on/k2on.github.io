{
    "$schema": "https://raw.githubusercontent.com/k2on/remote-cli/main/schema.json",
    "title": "KOONTIL",
    "description": "Koon's personal remote shell.",
    "uri": "koon.dev",
    "menus": {
        "main": {
            "splash": "MYSPLASH",
            "header": "User: $USER | Time: $TIME",
            "prefix": "$RED$USER>$RESET",
            "commands": {
                "colors": {
                    "description": "Show the colors.",
                    "script": "colors"
                },
                "hello": {
                    "description": "Say hi",
                    "command": "echo \"hi andrew\"",
                    "aliases": ["hi"]
                }
            }
        }
    },
    "mainMenu": "main"
}
